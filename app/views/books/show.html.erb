<div class="container">
<div class="row">
<%= render 'list', user: @users %>
<div class="col-lg-8">

<h2>Books detail</h2>
<table class="table table-hover table-inverse">
 

   
    
 <tbody>
  <% @books.each do |book| %>
  <tr>
  <%= image_tag user.get_profile_image %>
  <%= link_to user.name, user_path(book.id) %>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
 
  <%= link_to 'Edit', edit_book_path(book.id) %>
  <%= link_to 'Destroy', book_path(book.id),method: :delete,"data-confirm" => "本当に消しますか？" %>
  </tr>

  <% end %>
 </tbody>
</table>



</div>
</div>
</div>