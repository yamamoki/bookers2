
<div class="container">
<div class="row">
<%= render 'list', user: @user %>
<div class="col-md-8 offset-md-1" >

<h2>Books detail</h2>
<table class="table">




 <tbody>
<!--each文を使わない一つだけだから-->
  <tr>
   <td>
   <%= link_to user_path(@book.user.id) do %>
   <%= image_tag @book.user.get_profile_image %><p>
   <%= @book.user.name %>
   <% end %></td>

  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <td>
  <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success " %>
  </td>
  <td>
  <%= link_to 'Destroy', book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に消しますか？" %>
  </td>
  </tr>


 </tbody>
</table>



</div>
</div>
</div>