
<p id="notice"><%= notice %></p>


<div class="col-md-3">
  <h2>User info</h2>


<!--ユーザー写真-->
<%= image_tag user.get_profile_image %>






  <table class="table">

    <tbody>
      <tr>
        <th>name</th>
        <th class="profile-name"><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th class="introduction"><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

 <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block edit_user' do %>
 <i class="fas fa-user-cog"></i><% end %>





<h2 class="mt-3">New book</h2>



<%= form_with model: Book.new do |f| %>

<div class="form-group">
 <label for="book_title">Title</label>
 <%=f.text_field :title, class:"form-control book_title" %>
 </div>

<div class="form-group">
<label for="book_opnion">Opinion</label>
 <%=f.text_area :body, class:"form-control book_body" %>
</div>

<div class="actions">
<%= f.submit "Create Boook", class:"btn btn-success" %>
<% end %>
  </div>

 </div>





