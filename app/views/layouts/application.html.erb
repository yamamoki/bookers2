<!DOCTYPE html>
<html>
  <head>

     <script src="https://kit.fontawesome.com/b832ec735d.js" crossorigin="anonymous"></script>

    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-expand-lg navbar-dark bg-dark">


  <a class="navbar-brand" href="/">Bookers</a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
   <span class="navbar-toggler-icon"></span>
  </button>



  <div class="collapse navbar-collapse" id="navbarNavDropdown">
   <ul class="navbar-nav ml-auto">

      
    <% if user_signed_in? %>
<!--ログイン後-->
      <li>
       <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
      <i class="fa-solid fa-house"></i>Home<% end %>
      </li>
      <li>
        <%= link_to '/users', class: 'nav-link text-light' do %>
        <i class="fa-solid fa-users"></i>Users<% end %>
      </li>
      <li>
        <%= link_to '/books', class: 'nav-link text-light' do %>
        <i class="fa-solid fa-book-open"></i>Books<% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-from-bracket"></i>Log out<% end %>
      </li>
    <% else %>
<!--ログイン前-->
      <li>
       <%= link_to root_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-house"></i>Home<% end %>
      </li>
      <li>
        <%= link_to about_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-link"></i>About<% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-user-plus"></i>Sign up<% end %>
      </li>
      <li>
        <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-to-bracket"></i>Log in<% end %>
      </lk>
    <% end %>

    </ul>
   </div>

  </header>
    <%= yield %>

  <footer class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight lnfratop.inc</p>
      </div>
    </div>
  </footer>

  </body>
</html>
