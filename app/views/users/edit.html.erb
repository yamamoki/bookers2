<div class="container">
  <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>Users info</h2>
  <%= form_with model:@user,url: user_path(@user.id), method: :patch do |f| %>

<div class="form-group">
  <label for="user_name">Name</label>
  <%= f.text_field :name, class:"form-control name", id:"user_name"%>
</div>

 <div class="form-group">
  <label for="user_profile_image">Image</label><br>
  <%= f.file_field :profile_image, class:"form-control-file user_image",accept: "image/*", id:"user_profile_image" %>
 </div>

<div class="form-group">
 <label for="user_introduction">Introduction</label>
 <%= f.text_area :introduction, class:"form-control introduction", id:"user_introduction"%>
</div>

    <%= f.submit "Update User", class:"btn btn-secondary" %>
  <% end %>

    </div>
   </div>

  </div>